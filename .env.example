# Copy to .env and fill in values or set as environment variables
# Toggle mock mode (1 to use local sample data instead of real APIs)
USE_MOCK=1

# Spreadsheet ID for Google Sheets (required for Sheets writing)
GOOGLE_SHEETS_SPREADSHEET_ID=
GOOGLE_SHEETS_TAB_NAME=DailyMetrics

# Provide either inline JSON for service account or a path to the JSON file
GOOGLE_SERVICE_ACCOUNT_JSON=
GOOGLE_SERVICE_ACCOUNT_FILE=

# Slack webhook URL for sending the daily digest
SLACK_WEBHOOK_URL=

# Timezone for scheduling (informational; GitHub Actions uses UTC)
TIMEZONE=UTC
